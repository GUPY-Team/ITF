@page
@model IdentityServer.Pages.Account.Logout.LoggedOutModel

<div class="logged-out-page">
    <h1>
        Logout
        <small>You are now logged out</small>
    </h1>

    @if (Model.ViewModel.PostLogoutRedirectUri != null)
    {
        <div>
            Click <a class="PostLogoutRedirectUri" href="@Model.ViewModel.PostLogoutRedirectUri">here</a> to return to the
            <span>@Model.ViewModel.ClientName</span> application.
        </div>
    }

    @if (Model.ViewModel.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.ViewModel.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.ViewModel.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}